{
  "env": {
    "test": {
      "presets": [["env", { "node": "current" }]],
      "plugins": ["transform-es2015-modules-commonjs"]
    },
    "production": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "browsers": ">1%"
            },
            "modules": false,
            "loose": true
          }
        ]
      ],
      "plugins": [
        [
          "transform-runtime",
          {
            "helpers": false,
            "polyfill": false,
            "regenerator": true
          }
        ],
        "external-helpers"
      ]
    }
  }
}
