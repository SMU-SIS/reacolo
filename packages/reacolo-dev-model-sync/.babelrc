{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ">1%"
      },
      "modules": false,
      "loose": true
    }]
  ],

  "plugins": [
    ["babel-plugin-transform-builtin-extend", {
        "globals": ["Error"],
        "approximate": true
    }]
  ],

  "env": {
    "test": {
      "presets": [["env", { "node": "current" }]],
      "plugins": ["transform-es2015-modules-commonjs"]
    },
    "production": {
      "plugins": ["external-helpers"]
    },
    "development": {
      "plugins": ["external-helpers"]
    }
  }
}
