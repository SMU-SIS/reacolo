{
  "name": "reacolo",
  "scripts": {
    "lint": "eslint 'packages/**/src/*.@(js|jsx)'",
    "commit": "git-cz",
    "test": "lerna run test",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook",
    "commitmsg": "commitlint -e",
    "git-hook": "yarn lint && yarn test",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^4.1.1",
    "@commitlint/config-angular": "^3.1.1",
    "@commitlint/config-lerna-scopes": "^4.1.1",
    "@commitlint/prompt": "^4.1.0",
    "commitizen": "^2.9.6",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "prettier": "^1.7.4",
    "standard-version": "^4.2.0"
  },
  "keywords": [
    "ecology",
    "cross-devices"
  ],
  "author": "Quentin Roy <quentinroy@smu.edu.sg>",
  "license": "UNLICENSED",
  "private": true,
  "repository": "https://github.com/SMU-SIS/reacolo.git",
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}
