{
  "name": "reacolo",
  "scripts": {
    "lint": "eslint 'packages/**/src/*.@(js|jsx)'",
    "lint:msg": "validate-commit-msg",
    "validate": "npm ls",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "postrewrite": "npm run git-hook",
    "precommit": "npm run git-hook",
    "prepush": "npm run git-hook",
    "commitmsg": "npm run lint:msg",
    "git-hook": "npm run lint && lerna run test",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "commitizen": "^2.9.5",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "husky": "^0.14.3",
    "lerna": "^2.0.0",
    "validate-commit-msg": "^2.8.2"
  },
  "keywords": [
    "ecology",
    "cross-devices"
  ],
  "author": "Quentin Roy <quentinroy@smu.edu.sg>",
  "license": "UNLICENSED",
  "private": true,
  "repository": "https://github.com/SMU-SIS/reacolo.git",
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "build",
        "ci"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
