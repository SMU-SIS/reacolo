{
  "name": "reacolo",
  "scripts": {
    "lint": "eslint 'packages/**/src/**/*.@(js|jsx)'",
    "commit": "git-cz",
    "test": "lerna run test",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "commitmsg": "commitlint -e",
    "git-hook": "lint-staged && yarn test",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-angular": "^5.1.1",
    "@commitlint/config-lerna-scopes": "^5.2.0",
    "@commitlint/prompt": "^5.2.5",
    "commitizen": "^2.9.6",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.7.4"
  },
  "keywords": [
    "ecology",
    "cross-devices"
  ],
  "author": "Quentin Roy <quentinroy@smu.edu.sg>",
  "license": "UNLICENSED",
  "private": true,
  "repository": "https://github.com/SMU-SIS/reacolo.git",
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "lint-staged": {
    "*.@(js|jsx)": [
      "eslint"
    ]
  },
  "dependencies": {},
  "workspaces": [
    "packages/*"
  ]
}
